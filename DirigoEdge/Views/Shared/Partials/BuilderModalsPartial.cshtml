<div id="EditFormModal" class="pb-modal">
    <div class="pb-modal-dialog">
        <div class="pb-modal-content">
            <div class="pb-modal-header">
                <button type="button" class="close" data-dismiss="pb-modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h2>Edit Form</h2>
            </div>
            <div class="pb-modal-body">
                <div class="pb-content container">
                    <ul class="pb-nav pb-nav-tabs">
                        <li class="active"><a href="#addFormField" data-toggle="pb-tab">Add Field</a></li>
                        <li><a href="#fieldSettings" data-toggle="pb-tab">Field Settings</a></li>
                        <li><a href="#formSettings" data-toggle="pb-tab">Form Settings</a></li>
                    </ul>

                    <ul class="tab-content noPadding">
                        <li class="active pb-tab-pane" id="addFormField">
                            <a class="pb-btn pb-btn-default" data-type="text" href="#">Text Input Field</a>
                            <a class="pb-btn pb-btn-default" data-type="textarea" href="#">Text Area</a>
                        </li>
                        <li id="fieldSettings" class="pb-tab-pane">
                            <div class="inspectorPane" data-type="text">

                                <label>Text Input Settings</label>

                                <div class="fieldContainer" data-field="label">
                                    <label>Label</label>
                                    <input type="text" value="" />
                                </div>

                                <div class="fieldContainer" data-field="placeholder">
                                    <label>Placeholder</label>
                                    <input type="text" value="" />
                                </div>

                                <div class="fieldContainer" data-field="required">
                                    <label>Required</label>
                                    <input type="checkbox" value="" />
                                </div>

                            </div>

                            <div class="inspectorPane" data-type="textarea">

                                <label>Text Area Settings</label>

                                <div class="fieldContainer" data-field="label">
                                    <label>Label</label>
                                    <input type="text" value="" />
                                </div>

                                <div class="fieldContainer" data-field="placeholder">
                                    <label>Placeholder</label>
                                    <input type="text" value="" />
                                </div>

                                <div class="fieldContainer" data-field="rows">
                                    <label>Rows</label>
                                    <input type="number" value="4" />
                                </div>

                                <div class="fieldContainer" data-field="required">
                                    <label>Required</label>
                                    <input type="checkbox" value="" />
                                </div>

                            </div>
                        </li>
                        <li id="formSettings" class="pb-tab-pane">
                            <h4>Form Settings</h4>

                            <div class="fieldContainer">
                                <label>Form Label</label>
                                <input type="text" />
                            </div>

                            <div class="fieldContainer">
                                <label>Post Url</label>
                                <input type="text" value="/home/formsubmit/" />
                            </div>

                            <div class="fieldContainer">
                                <label>Save Form To Database?</label>
                                <input type="checkbox" checked="checked" />
                            </div>

                            <div class="fieldContainer">
                                <label>Send E-mail On Submit?</label>
                                <input type="checkbox" checked="checked" />
                            </div>

                            <div class="fieldContainer">
                                <label>E-mail Addresses to send to :</label>
                                <input type="text" />
                            </div>

                            <div class="fieldContainer">
                                <label>Ajax Submit</label>
                                <input type="checkbox" checked="checked" />
                            </div>
                        </li>
                    </ul>
                    <div class="editorPane">
                        <div id="FormHtml"></div>
                    </div>
                </div>
            </div>
            <div class="pb-modal-footer">
                <a class="pb-pull-right pb-btn pb-btn-primary confirmButton confirmModalButton" id="UpdateFormButton">Update</a>
                <a onclick="$('.pb-modal').pbModal('hide');" class="pb-pull-right pb-btn pb-btn-default">Close</a>
            </div>
        </div>
    </div>
</div>
