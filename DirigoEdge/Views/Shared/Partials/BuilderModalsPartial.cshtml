@using PageBuilder.Models

<div id="AddModuleModal" class="pb-modal">
    <div class="pb-modal-dialog pb-modal-lg">
        <div class="pb-modal-content">
            <div class="pb-modal-header">
                <button type="button" class="close" data-dismiss="pb-modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h2>Add Module</h2>
            </div>
            <div class="pb-modal-body">
                <div class="moduleListingContainer">
                    <ul class="pb-nav pb-nav-tabs clearfix">
                        <li class="active"><a href="#basic" data-toggle="pb-tab">Basic</a></li>
                        <li><a href="#static" data-toggle="pb-tab">Static</a></li>
                        <li><a href="#dynamic" data-toggle="pb-tab">Dynamic</a></li>
                    </ul>

                    <ul class="pb-tab-content clearfix">
                        <li class="active pb-tab-pane" id="basic">
                            <a id="AddRichTextArea" class="moduleEntry" data-toggle="pb-tooltip" data-placement="top"
                                title="Editable Html Text Area. Great for adding editable content such as text and images.">Rich Text Area</a>
                        </li>
                        <li id="static" class="pb-tab-pane">
                            @*<div class="moduleToolbar">
                                <input type="text" id="moduleSearch" placeholder="Search Modules" />
                                <button class="button" id="ShowMostUsedModules">Most Used <i class="fa fa-star"></i></button>
                                <button class="button active" id="ShowAllModules">All <i class="fa fa-asterisk"></i></button>
                            </div>*@
                            <div class="moduleScrollWrap">
                                <div class="moduleContainer" data-avgusage="@Model.UsageAverage">
                                    @{
                                        foreach (var module in Model.Modules)
                                        {
                                        <a data-name="@module.ModuleName" data-id="@module.ContentModuleId" data-usage="" class="moduleEntry">
                                            <span class="title">@module.ModuleName</span>

                                            <span class="description">@module.ModuleName</span>
                                        </a>
                                        }
                                    }
                                </div>
                            </div>
                        </li>
                        <li id="dynamic" class="pb-tab-pane">
                            @*Dynamic Modules*@
                            @{
                                foreach (var module in Model.DynamicModulesList)
                                {
                                    <a data-name="@module.Key" data-usage="" class="moduleEntry">@module.Key</a>
                                }
                            }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="pb-modal-footer"></div>
        </div>
    </div>
</div>

